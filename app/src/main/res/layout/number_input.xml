<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:measureAllChildren="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/root"
                style="@style/OtherBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="√"
                android:textSize="20sp" />

            <Button
                android:id="@+id/dot"
                style="@style/OtherBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="20sp" />

            <Button
                android:id="@+id/opPar"
                style="@style/OtherBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:textSize="20sp" />

            <Button
                android:id="@+id/closePar"
                style="@style/OtherBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cos"
                style="@style/OtherBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cos"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sin"
                style="@style/OtherBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sin"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tan"
                style="@style/OtherBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tan"
                android:textSize="20sp" />
            <Button
                android:id="@+id/power"
                style="@style/OtherBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="^"
                android:textSize="20sp" />
            <Button
                android:id="@+id/pi"
                style="@style/OtherBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="π"
                android:textSize="20sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <Button
            style="@style/Number_Button"
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="1"
            android:textSize="32sp" />

        <Button  style="@style/Number_Button"
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="2"
            android:textSize="32sp" />

        <Button  style="@style/Number_Button"
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="3"
            android:textSize="32sp" />

        <Button style="@style/Operation_Button"
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorSecondary"
            android:text="+"
            android:textSize="32sp" />

        <Button  style="@style/Number_Button"
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="4"
            android:textSize="32sp" />

        <Button  style="@style/Number_Button"
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="5"
            android:textSize="32sp" />

        <Button  style="@style/Number_Button"
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="6"
            android:textSize="32sp" />

        <Button style="@style/Operation_Button"
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorSecondary"
            android:text="-"
            android:textSize="32sp" />

        <Button  style="@style/Number_Button"
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="7"
            android:textSize="32sp" />

        <Button  style="@style/Number_Button"
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="8"
            android:textSize="32sp" />

        <Button  style="@style/Number_Button"
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="9"
            android:textSize="32sp" />

        <Button style="@style/Operation_Button"
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorSecondary"
            android:text="/"
            android:textSize="32sp" />

        <ImageButton
            android:src="@drawable/ic_del"
            android:background="@null"
            android:id="@+id/Delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <Button  style="@style/Number_Button"
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="0"
            android:textSize="32sp" />

        <Button style="@style/Operation_Button"
            android:id="@+id/multiplication"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorSecondary"
            android:text="*"
            android:textSize="32sp" />

        <Button style="@style/Equals_button"
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/colorThird"
            android:text="="
            android:textColor="@color/white"
            android:textSize="32sp" />

    </GridLayout>
</LinearLayout>